<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="270dp"
        android:layout_height="155dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_radius5_color_ffffff">

        <TextView xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textColor="#ff030303"
            android:textSize="17dp"
            tools:text="标题" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="14sp"
            android:textColor="#ff030303"
            tools:text="xxxxxxxxxxx" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true">

            <View style="@style/view_lin_cdced2"></View>

            <View
                android:id="@+id/view_lin"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/colorCDCED2" />


            <TextView
                android:id="@+id/tv_cancel"
                style="@style/t16_c0076ff"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/view_lin"
                android:gravity="center"
                android:textColor="@color/color00B6D5"
                android:textSize="17dp"
                tools:text="xxxxxx" />

            <TextView
                android:id="@+id/tv_determine"
                style="@style/t16_c0076ff"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/view_lin"
                android:gravity="center"
                android:textColor="@color/color00B6D5"
                android:textSize="17dp"
                tools:text="xxxxx" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
