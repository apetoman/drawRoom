<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorc3d4de6">


        <ImageView
            android:id="@+id/ej_iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="21dp"
            android:paddingRight="10dp"
            android:src="@drawable/eju_icon_back"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ej_iv_back"
            android:gravity="center"
            android:text="@string/ej_draw_room"
            android:textColor="@color/colorffffff"
            android:textSize="20sp" />


        <ImageView
            android:id="@+id/ej_iv_more"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:src="@drawable/ej_icon_more"
            android:text="..."
            android:textSize="20sp" />


    </RelativeLayout>




    <RelativeLayout
        android:id="@+id/rl_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rl_title" />

    <TextView

        android:id="@+id/ej_tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_title"
        android:layout_alignParentRight="true"
        android:layout_marginTop="63dp"
        android:background="@drawable/bg_radius15_color_ff3d4de6"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:paddingTop="2dp"
        android:paddingRight="10dp"
        android:paddingBottom="2dp"
        android:text="@string/ej_share"
        android:textColor="@color/colorffffff"
        android:textSize="14sp" />


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rl_av_load"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="#0DFFFFFF"
        android:layout_height="match_parent"
        android:clickable="false">

        <com.wang.avi.AVLoadingIndicatorView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/av_load"
            style="@style/AVLoadingIndicatorView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="visible"
            app:indicatorColor="@color/colorbfefe4"
            app:indicatorName="LineSpinFadeLoaderIndicator"/>
    </RelativeLayout>


</RelativeLayout>
